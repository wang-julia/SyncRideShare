{
  "name": "@flowglad/nextjs",
  "version": "0.18.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "server"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "check": "biome check . && bun run typecheck",
    "build:declarations": "tsc -p tsconfig.declarations.json",
    "format": "biome format --write .",
    "format:check": "biome format ."
  },
  "dependencies": {
    "@flowglad/shared": "0.18.0",
    "@flowglad/react": "0.18.0",
    "@flowglad/server": "0.18.0",
    "@flowglad/node": "0.29.0",
    "@vercel/mcp-adapter": "0.11.1",
    "zod": "4.1.5"
  },
  "devDependencies": {
    "@types/react": "18.3.12",
    "typescript": "5.8.2"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./server": {
      "types": "./dist/types/server.d.ts",
      "import": "./dist/esm/server.js",
      "require": "./dist/cjs/server.js"
    },
    "./better-auth": {
      "types": "./dist/types/better-auth.d.ts",
      "import": "./dist/esm/better-auth.js",
      "require": "./dist/cjs/better-auth.js"
    }
  },
  "peerDependencies": {
    "react": "^19.0.0 || ^18.0.0",
    "next": "^14.0.3 || ^15.0.0 || ^16.0.0",
    "better-auth": "^1.3.17"
  },
  "peerDependenciesMeta": {
    "better-auth": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flowglad/flowglad"
  },
  "publishConfig": {
    "access": "public"
  }
}