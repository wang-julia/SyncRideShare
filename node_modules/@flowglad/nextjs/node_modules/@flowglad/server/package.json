{
  "name": "@flowglad/server",
  "version": "0.18.0",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/types/index.d.ts",
  "typesVersions": {
    "*": {
      "better-auth": [
        "./dist/types/better-auth/index.d.ts"
      ],
      "express": [
        "./dist/types/express/index.d.ts"
      ],
      "supabase": [
        "./dist/types/supabase/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "build:declarations": "tsc -p tsconfig.declarations.json",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc --noEmit",
    "check": "biome check . && bun run typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.mts"
  },
  "dependencies": {
    "@flowglad/shared": "0.18.0",
    "@flowglad/node": "0.29.0",
    "nanoid": "^3.3.11",
    "zod": "4.1.5"
  },
  "peerDependencies": {
    "better-auth": "^1.3.17",
    "express": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "better-auth": {
      "optional": true
    },
    "express": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "better-auth": "^1.3.17",
    "dotenv": "^16.4.5",
    "typescript": "5.8.2",
    "vitest": "3.0.5",
    "msw": "^2.7.0"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs"
    },
    "./better-auth": {
      "types": "./dist/types/better-auth/index.d.ts",
      "import": "./dist/esm/better-auth/index.mjs",
      "require": "./dist/cjs/better-auth/index.cjs"
    },
    "./express": {
      "types": "./dist/types/express/index.d.ts",
      "import": "./dist/esm/express/index.mjs",
      "require": "./dist/cjs/express/index.cjs"
    },
    "./supabase": {
      "types": "./dist/types/supabase/index.d.ts",
      "import": "./dist/esm/supabase/index.mjs",
      "require": "./dist/cjs/supabase/index.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flowglad/flowglad"
  },
  "publishConfig": {
    "access": "public"
  }
}